extends ../layout/index
block contenido
    main.container.mt-5     
        h1.text-center.mb-5 #{pagina}

        .row
            .col-md-12
                if(errores)
                    each  error in errores  
                        div.alert.alert-danger.text-center(role="alert") #{error.mensaje}
                if(aprrove)
                    each  appr in aprrove  
                        div.alert.alert-success.text-center(role="alert") #{appr.mensaje}
                .row.justify-content-center
                    .col-md-8
                        form(action="/tutorRegistro", method="POST")
                            .form-group
                                label(for="nombre_tutor") Nombre tutor
                                input(id="nombre_tutor", class="form-control", type="text", placeholder="Nombre tutor", name="nombre_tutor", value=nombre_tutor)
                            .form-group
                                label(for="ced_tutor") Cédula tutor
                                input(id="ced_tutor", class="form-control", type="text", placeholder="Cédula tutor", name="ced_tutor", value=ced_tutor)
                            .form-group
                                label(for="email_tutor") Email tutor
                                input(id="email_tutor", class="form-control", type="email", placeholder="Email tutor", name="email_tutor", value=email_tutor)
                            .form-group
                                label(for="tel_tutor") Teléfono
                                input(id="tel_tutor", class="tel_tutor", type="tel", placeholder= "Teléfono tutor", name="tel_tutor", value=tel_tutor)
                            .form-group
                                label(for="especialidad_tutor") Especialidad del tutor
                                input(id="especialidad_tutor", class="especialidad_tutor", type="text", placeholder="Especialidad", name="especialidad_tutor", value=especialidad_tutor)
                            .form-group
                                label(for="pass_tutor") Contraseña
                                input(id="pass_tutor", class="pass_tutor", type="password", placeholder="Contraseña", name="pass_tutor", value=pass_tutor)


                            input.btn.btn-success.btn-block(type="submit", value="agregar")